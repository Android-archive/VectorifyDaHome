<?xml version="1.0" encoding="utf-8"?>
<!-- POSITION BUTTONS -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_up"
                 android:onClick="moveVectorUp"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/up"/>

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_down"
                 android:onClick="moveVectorDown"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/down"/>

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_left"
                 android:onClick="moveVectorLeft"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/left"/>

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_right"
                 android:onClick="moveVectorRight"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/right"/>

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_horizontal_align_center"
                 android:onClick="centerHorizontalVectorPosition"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/center_horizontal"/>

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_vertical_align_center"
                 android:onClick="centerVerticalVectorPosition"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/center_vertical"/>

    <ImageButton android:layout_width="0dp"
                 android:layout_weight="1"
                 android:padding="8dp"
                 android:layout_height="wrap_content"
                 android:src="@drawable/ic_restore"
                 android:onClick="resetVectorPosition"
                 android:background="?android:attr/selectableItemBackground"
                 android:contentDescription="@string/live_wallpaper_name"
                 android:id="@+id/reset_position"/>
</LinearLayout>
