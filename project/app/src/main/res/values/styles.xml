<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="toolbar_icons_color" format="color" />

    <!-- Base theme light. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/system_bars_color</item>
        <item name="colorPrimaryDark">@color/system_bars_color</item>
        <item name="android:windowBackground">@color/activity_background_color</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="md_color_button_text">@color/vectors_color</item>
        <item name="md_corner_radius">@dimen/md_corner_radius</item>
        <item name="md_font_title">@font/raleway_black</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Material.PopupMenu">
        <item name="android:popupElevation">2dp</item>
    </style>

    <style name="ToolbarStyle.Title" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <!-- Chip text appearance -->
    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!-- This will set the fade in animation on all the activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!-- Style for toolbar -->
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="toolbar_icons_color">@android:color/black</item>
    </style>

    <style name="ToolbarStyle.Dark" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="toolbar_icons_color">@android:color/white</item>
    </style>
</resources>
